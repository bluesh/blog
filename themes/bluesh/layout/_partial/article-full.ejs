<section class="article-container">
<!-- Back Home -->
<%- partial('_partial/backhome') %>

<!-- Page Header -->
<header class="intro-header">
    <div class="container">
        <div class="post-heading">
            <h1><%- item.title || "不想写题目" %></h1>


            <!-- Meta -->
            <div class="post-meta">
                <div class="post-date">
                    <%- item.date.format(theme.date_format) %>

                    <% if (theme.leancloud_visitors.enable) { %>
                        &nbsp; | &nbsp;
                        🙈
                        <span id="<%- url_for(item.path) %>" class="leancloud_visitors" data-title="<%= item.title %>"></span>
                    <% } %>
                </div>
                <div class="post-tags">
                    <% if (item.tags && item.tags.length){ %>
                        <%- partial('article-tags', {item: item}) %>
                    <% } else if (item.categories && item.categories.length) { %>
                        <%- partial('article-categories', {item: item}) %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content -->
<article>
    <div class="container">
        <!-- Post Main Content -->
        <div class="post-content">
            <%- item.content %>
        </div>
    </div>
</article>

</section>

<div class="container">
    <!-- footer money -->
    <div class="money">
        <button class="btn" onClick="getCoffee()">赏</button>
        <div class="money-img">
            <p>打赏咖啡☕️ 也请留个言🙋</p>
            <small>
                支付宝<br>
                <img src="/blog/images/alipay.jpg">
            </small>
            <small>
                微信<br>
                <img src="/blog/images/weixin.jpg">
            </small>
        </div>
    </div>


    <!-- Comments -->
    <%- partial("_partial/comment.ejs") %>
</div>
<script type="text/javascript">
    var showImg = false;
    var $img = document.querySelectorAll('.money-img')[0];
    function getCoffee() {
        ga('send', 'event', 'Button', 'getCoffee');
        if(showImg) {
            $img.className = 'money-img';
            showImg = false;
        } else {
            $img.className = '';
            showImg = true;
        }

    }
</script>
