transition-all()
  -webkit-transition all 0.5s
  -moz-transition all 0.5s
  transition all 0.5s

.transition-all
  transition-all()

animation()
  animation cursor_pulse ease-out 0.5s infinite
  -webkit-animation cursor_pulse ease-out 0.5s infinite


.animation
  animation()

@-webkit-keyframes cursor_pulse {
  0% {
    opacity: 0
  }
  40% {
    opacity: 1
  }
  60% {
    opacity: 1
  }
  100% {
    opacity: 0
  }
}

@keyframes cursor_pulse {
  0% {
    opacity: 0
  }
  40% {
    opacity: 1
  }
  60% {
    opacity: 1
  }
  100% {
    opacity: 0
  }
}

