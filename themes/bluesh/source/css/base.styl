@import "_var.styl"
@import "mixins.styl"

body,
html
  width 100%
  font-size 16px
  color gray-dark
  font-family font-family
  margin 0

p
  letter-spacing .1px
  line-height 1.5
  margin 20px 0
  a
    text-decoration underline

h1, h2, h3, h4, h5, h6
  font-weight 800

img
  max-width 100%

a
  color link-color
  &:hover, &:focus
    opacity 0.8
    @extend .transition-all
  &:visited, &:link
    color link-color
a img
  &:hover, &:focus
    cursor zoom-in

code, pre
  font-size 0.8em
  background-color #f8f8f8
  font-family font-code
pre
  white-space -moz-pre-wrap
  white-space -pre-wrap
  white-space -o-pre-wrap
  white-space pre-wrap
  word-wrap break-word
code
  margin 0 2px
  padding 3px 5px
  color code-color
  border-radius 2px
  white-space inherit

hr
  margin: 20px 0
  border: 0
  border-top: 1px solid color-border

a.nav-back
  display block

.title
  font-size 1.2em
  font-weight 100
  letter-spacing -0.035em
  display inline-block
  padding 20px
  margin 0
  color color-heading
  position relative

  span.so
    color link-color
    font-weight bold

  span.cursor
    background-color #aaa
    width 2px
    height 48%
    top 28%
    right 11.25%
    display inline-block
    position absolute
    @extend .animation

  span.tm
    font-size 0.36em
    margin-right 12px
    top -35px
    position relative
nav
  position absolute
  top 0
  left 0
  width 100%
  z-index 3

.intro
  width 100%
  height 100%
  position relative
  margin: 80px auto 0

.intro-header
  margin-bottom 50px

  .site-heading, .post-heading, .page-heading
    padding 100px 0 20px
    color gray-dark
    &.archives
      color white-faded
      margin-top 60px

  .site-heading, .page-heading
    text-align center
    h1
      margin-top 0
      font-size 2em
      color link-color
    .subheading
      font-size 24px
      line-height 1.1
      display block
      font-weight 300
      margin 10px 0 0
    @media only screen and (min-width: 768px)
      h1
        font-size 2.2em
  .post-heading
    h1
      font-size 35px
      text-transform capitalize
    .subheading
      line-height 1.1
      display block
      font-size 24px
      margin 10px 0 30px
      font-weight 600

    @media only screen and (min-width: 768px)
      h1
        font-size 50px
      .subheading
        font-size 30px

.post-preview
  position relative
  overflow hidden
  clear both
  margin-bottom 28px
  &.archive
    padding 12px 0
  p
    margin-left 32%
    padding-left .6em
    font-size 1.1em
    line-height 1.5
  blockquote
    margin-left 32%
    padding .7em
    margin-top 10px
    border none
    font-size 1em
    p
      margin 0
      padding 0
  > a
    width 100%
    height 100%
    text-decoration none
    color gray-dark
    &:hover, &:focus
      color link-color
    >.post-title
      height 100%
      text-transform capitalize
      font-size 2em
      margin-bottom 0

  img
    display: none

.section-heading
  font-size 36px
  margin-top 60px
  font-weight 700

.caption
  text-align center
  font-size 14px
  padding 10px
  font-style italic
  margin 0
  display block
  border-bottom-right-radius 5px
  border-bottom-left-radius 5px

.post-content
  padding-bottom 100px
  p
    padding-right 18%

.post-tags, .post-categories, .post-date
  font-size 1em
  margin 10px 0
  a
    text-transform uppercase
    color link-color
    &:hover, &:visited, &:active
      text-decoration none

.post-date
  color #9e9e9e
  margin-top 0

.archive-before-pagination
  height 50px

.comment
  margin 20px 0 100px

footer
  padding 50px 0 65px
  color white-faded
  text-align center

.btn
  text-transform uppercase
  font-size 14px
  font-weight 800
  letter-spacing 1px
  border-radius 0
  padding 15px 25px
  cursor pointer
  &:active, &:focus
    outline none

.btn-lg
  font-size 16px
  padding 25px 35px

.btn-default
  &:hover, &:focus
    background-color brand-primary
    border 1px solid brand-primary
    color white

.pagiantion
  display block
  padding 55px 0
  margin 0
  text-align center
  list-style none

.btn
  text-transform uppercase
  font-size 14px
  font-weight 800
  letter-spacing 1px
  padding 12px 20px
  color #fff !important
  border none
  background link-color
  text-decoration none
  border-radius 3px
  .disabled
    color gray
    cursor not-allowed

.site-footer
  font-size 12px

::-moz-selection
  color white
  text-shadow none
  background brand-primary

::selection
  color white
  text-shadow none
  background brand-primary

img::selection
  color white
  background transparent

img::-moz-selection
  color white
  background transparent

body
  webkit-tap-highlight-color brand-primary

.money
  text-align center
  color rgba(0,0,0,0.5)
  small
    width 30%
    display inline-block
    margin 0 9%
  .money-img
    display none


@media only screen and (max-width: 640px)
  a.nav-back
    text-align center
  .container
    padding-left 1em
    padding-right 1em
  .post-preview > a >.post-title
    font-size 1.5em
